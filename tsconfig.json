{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@client/*": ["src/client/*"],
      "@constants/*": ["src/constants/*"],
      "@crypto/*": ["src/crypto/*"],
      "@enums/*": ["src/enums/*"],
      "@fee/*": ["src/fee/*"],
      "@helpers/*": ["src/helpers/*"],
      "@libs/*": ["src/libs/*"],
      "@models/*": ["src/models/*"],
      "@qr/*": ["src/qr/*"],
      "@transaction/*": ["src/transaction/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "examples"],
}