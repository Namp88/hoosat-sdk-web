{
  "name": "hoosat-sdk-web",
  "version": "0.1.0",
  "description": "Browser-compatible TypeScript SDK for Hoosat blockchain - crypto, transactions, QR codes",
  "main": "dist/hoosat-sdk.umd.js",
  "module": "dist/hoosat-sdk.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "test": "vitest",
    "test:browser": "vitest --browser",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:first": "standard-version --first-release",
    "release:dry": "standard-version --dry-run",
    "push:tags": "git push --follow-tags origin master"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/hoosat-sdk.es.js",
      "require": "./dist/hoosat-sdk.umd.js"
    }
  },
  "keywords": [
    "hoosat",
    "blockchain",
    "crypto",
    "wallet",
    "browser",
    "web3",
    "cryptocurrency",
    "transaction",
    "ecdsa",
    "secp256k1",
    "qrcode"
  ],
  "author": "Andrei Kliubchenko <namp2988@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Namp88/hoosat-sdk-web.git"
  },
  "bugs": {
    "url": "https://github.com/Namp88/hoosat-sdk-web/issues"
  },
  "homepage": "https://github.com/Namp88/hoosat-sdk-web#readme",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@noble/hashes": "^1.5.0",
    "@noble/secp256k1": "^2.1.0",
    "bech32": "^2.0.0",
    "buffer": "^6.0.3",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/qrcode": "^1.5.5",
    "@types/secp256k1": "^4.0.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^3.2.4"
  }
}
